#!/bin/bash

cp -r decisions infrastructure/ansible/files/html
cp *-radar.csv infrastructure/ansible/files/html

pushd environment
java -jar /usr/share/java/plantuml.jar *.puml
pushd structure
java -jar /usr/share/java/plantuml.jar *.puml
popd
popd

pushd infrastructure/ansible/files/html

/usr/lib/pyenv/shims/gh-md-to-html -d . ../../../../README.md

pushd decisions
/usr/lib/pyenv/shims/gh-md-to-html -d . *.md
popd

sed -i 's/\.md\"/.html\"/g' README.html

mv README.html index.html

popd
